{
  "name": "quick-notes-extension",
  "displayName": "Quick Notes & Todos",
  "description": "Quick and simple notes and todo lists in VS Code with calendar",
  "version": "1.1.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:quickNotes.newNote"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "quick-notes-container",
          "title": "Quick Notes",
          "icon": "$(notebook)"
        }
      ]
    },
    "views": {
      "quick-notes-container": [
        {
          "id": "quickNotesView",
          "name": "Notes & Todos",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "quickNotes.newNote",
        "title": "New Note",
        "icon": "$(add)"
      },
      {
        "command": "quickNotes.newTodo",
        "title": "New Todo List",
        "icon": "$(checklist)"
      },
      {
        "command": "quickNotes.refresh",
        "title": "Refresh Notes",
        "icon": "$(refresh)"
      },
      {
        "command": "quickNotes.newFolder",
        "title": "New Folder",
        "icon": "$(new-folder)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "quickNotes.newNote",
          "when": "view == quickNotesView",
          "group": "navigation@1"
        },
        {
          "command": "quickNotes.newTodo",
          "when": "view == quickNotesView",
          "group": "navigation@2"
        },
        {
          "command": "quickNotes.refresh",
          "when": "view == quickNotesView",
          "group": "navigation@3"
        },
        {
          "command": "quickNotes.newFolder",
          "when": "view == quickNotesView",
          "group": "navigation@3"
        }
      ]
    },
    "configuration": {
      "title": "Quick Notes",
      "properties": {
        "quickNotes.storageFolder": {
          "type": "string",
          "default": "",
          "description": "Folder path where notes will be saved (relative to workspace root or absolute path). Leave empty to use workspace root."
        }
      }
    },
    "keybindings": [
      {
        "command": "quickNotes.newNote",
        "key": "alt+n",
        "mac": "cmd+n",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^18.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.40.0",
    "typescript": "^5.0.0"
  }
}
